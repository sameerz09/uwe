<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Payslip Import Wizard Form View -->
        <record id="view_payslip_import_wizard_form" model="ir.ui.view">
            <field name="name">payslip.import.wizard.form</field>
            <field name="model">payslip.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Payslips">
                    <group>
                        <group>
                            <field name="file_data" filename="file_name" widget="binary"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                        <group>
                            <div class="alert alert-info" role="alert">
                                <strong>Instructions:</strong>
                                <ul>
                                    <li>Download the template file first</li>
                                    <li>Fill in the employee data</li>
                                    <li>Upload the completed CSV file</li>
                                </ul>
                            </div>
                        </group>
                    </group>
                    
                    <group>
                        <field name="sample_data" widget="text" readonly="1"/>
                    </group>
                    
                    <footer>
                        <button name="action_download_template" 
                                string="Download Template" 
                                type="object" 
                                class="btn-primary"/>
                        <button name="action_import_payslips" 
                                string="Import Payslips" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Payslip Import Wizard Action -->
        <record id="action_payslip_import_wizard" model="ir.actions.act_window">
            <field name="name">Import Payslips</field>
            <field name="res_model">payslip.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_payslip_import_wizard_form"/>
        </record>

    </data>
</odoo>
