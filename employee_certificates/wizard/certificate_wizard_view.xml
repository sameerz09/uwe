<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Certificate Wizard Form View -->
    <record id="view_employee_certificate_wizard_form" model="ir.ui.view">
        <field name="name">employee.certificate.wizard.form</field>
        <field name="model">employee.certificate.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Certificate Template">
                <sheet>
                    <group>
                        <field name="employee_id" readonly="1" invisible="1"/>
                        <div class="oe_title">
                            <h1>Select Certificate Template</h1>
                        </div>
                        <group>
                            <field name="certificate_template" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="custom_certificate_message" 
                                   invisible="certificate_template != 'custom'"
                                   required="certificate_template == 'custom'"
                                   placeholder="Enter your custom certificate message here..."
                                   nolabel="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_certificate" 
                            string="Print Certificate" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-print"/>
                    <button name="action_send_certificate" 
                            string="Send Certificate" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-envelope"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Certificate Wizard Action -->
    <record id="action_employee_certificate_wizard" model="ir.actions.act_window">
        <field name="name">Select Certificate Template</field>
        <field name="res_model">employee.certificate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_type">action</field>
    </record>
</odoo>

