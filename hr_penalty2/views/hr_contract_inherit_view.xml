<odoo>
    <record id="view_hr_contract_form_inherit_custom" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.custom</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Payroll Info">
                    <group>
                        <field name="number_of_month_days"/>
<!--                        <field name="eligible_days"/>-->
<!--                        <field name="number_of_working_holidays"/>-->
<!--                        <field name="holiday_working_days"/>-->
<!--                        <field name="food_allowance"/>-->
                        <field name="commission_allowance"/> <!-- Added -->
                        <field name="off_deduction"/> <!-- Renamed -->
                        <field name="penalty_deduction"/> <!-- Added -->
                        <field name="overtime_hours"/>
                        <field name="overtime_per_hour_amount"/>
                        <field name="overtime_amount" readonly="1"/>
<!--                        <field name="total_variable_amount" readonly="1"/>-->
<!--                        <field name="total_package" readonly="1"/>-->
<!--                        <field name="holiday_total_amount" readonly="1"/>-->
<!--                        <field name="net_salary" readonly="1"/>-->
<!--                        <field name="net_salary_rounded" readonly="1"/>-->
                    </group>
                </page>
                <page string="Foreign Currency">
                    <div class="alert alert-info" role="alert" invisible="not foreign_currency_id">
                        <p class="mb-2">
                            <i class="fa fa-info-circle"/> 
                            <strong>Currency Conversion:</strong> Enter foreign currency values below and click the button to automatically convert them to original fields using current exchange rates.
                        </p>
                        <button name="action_compute_from_foreign_currency"
                                string="ðŸ’° Compute &amp; Convert to Original Currency"
                                type="object"
                                class="btn btn-success o_form_button"
                                icon="fa-calculator"
                                invisible="not foreign_currency_id"
                                help="Click to recalculate original field values using foreign currency values and current exchange rates"/>
                    </div>
                    <group>
                        <group string="Currency Selection">
                            <field name="foreign_currency_id" 
                                   options="{'no_create': True}"
                                   placeholder="Select a foreign currency to enter equivalent values"/>
                        </group>
                    </group>
                    <separator string="Salary Information (Foreign Currency)" 
                               invisible="not foreign_currency_id"/>
                    <group string="Basic Salary &amp; Allowances"
                           invisible="not foreign_currency_id">
                        <group>
                            <field name="foreign_wage"/>
                            <field name="foreign_housing_allowance"/>
                            <field name="foreign_transportation_allowance"/>
                            <field name="foreign_other_allowances"/>
                        </group>
                    </group>
                    <separator string="Additional Allowances &amp; Deductions (Foreign Currency)"
                               invisible="not foreign_currency_id"/>
                    <group invisible="not foreign_currency_id">
                        <group>
                            <field name="foreign_food_allowance"/>
                            <field name="foreign_commission_allowance"/>
                        </group>
                        <group>
                            <field name="foreign_off_deduction"/>
                            <field name="foreign_penalty_deduction"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
