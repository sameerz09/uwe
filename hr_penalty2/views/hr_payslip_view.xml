<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit hr.payslip form view to make worked days fields editable -->
    <record id="view_hr_payslip_form_inherit_editable_worked_days" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit.editable.worked.days</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <!-- Make Number of Days editable in worked days lines -->
            <xpath expr="//field[@name='worked_days_line_ids']//tree//field[@name='number_of_days']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <!-- Make Number of Hours editable in worked days lines -->
            <xpath expr="//field[@name='worked_days_line_ids']//tree//field[@name='number_of_hours']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <!-- Make Amount editable in worked days lines -->
            <xpath expr="//field[@name='worked_days_line_ids']//tree//field[@name='amount']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>

